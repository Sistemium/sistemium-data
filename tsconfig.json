{
  "include": [
    "src",
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": false,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  }
}
